generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  COMPLETED
}

enum TaskStatus {
  TODO
  DOING
  DONE
}

enum ProjectRole {
  OWNER
  MEMBER
}

enum DocumentType {
  PROBLEM_DEFINITION
  REQUIREMENTS
  ARCHITECTURE
  DECISION_LOG
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
updatedAt DateTime @default(now()) @updatedAt

  ownedProjects Project[]       @relation("OwnedProjects")
  memberships   ProjectMember[]
  tasksAssigned Task[]
  comments      Comment[]
}

model Project {
  id          String        @id @default(uuid())
  name        String
  description String?
  status      ProjectStatus @default(PLANNING)
  ownerId     String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  owner     User            @relation("OwnedProjects", fields: [ownerId], references: [id])
  members   ProjectMember[]
  tasks     Task[]
  documents Document[]
  decisions Decision[]
}

model ProjectMember {
  id        String      @id @default(uuid())
  userId    String
  projectId String
  role      ProjectRole

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])

  @@unique([userId, projectId])
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  projectId   String
  assignedTo  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  project  Project  @relation(fields: [projectId], references: [id])
  assignee User?    @relation(fields: [assignedTo], references: [id])
  comments Comment[]
}

model Document {
  id        String       @id @default(uuid())
  title     String
  content   String
  type      DocumentType
  projectId String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  project  Project  @relation(fields: [projectId], references: [id])
  comments Comment[]
}

model Decision {
  id        String   @id @default(uuid())
  title     String
  reason    String
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id])
}

model Comment {
  id         String   @id @default(uuid())
  content    String
  userId     String
  taskId     String?
  documentId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id])
  task     Task?     @relation(fields: [taskId], references: [id])
  document Document? @relation(fields: [documentId], references: [id])
}
